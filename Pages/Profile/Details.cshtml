@page
@model LMS.Pages.Profile.DetailsModel

@{
    ViewData["Title"] = "Details";
    var photoPath = "~/images/" + (Model.User.PhotoPath ?? "noimage.jpg");
}

<h1>@Model.User.FirstName's Profile</h1>

<div>
    <hr />
    <img class="imageThumbnail" src="@photoPath" asp-append-version="true" />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.State)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Zip)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Zip)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.BioInfo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.BioInfo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Link1)
        </dt>
        <dd class="col-sm-10">
            <a id="link1">@Html.DisplayFor(model => model.User.Link1)</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Link2)
        </dt>
        <dd class="col-sm-10">
            <a id="link2">@Html.DisplayFor(model => model.User.Link2)</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Link3)
        </dt>
        <dd class="col-sm-10">
            <a id="link3">@Html.DisplayFor(model => model.User.Link3)</a>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.User.ID">Edit</a>
</div>
