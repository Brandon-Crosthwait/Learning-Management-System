@page
@model LMS.Pages.Profile.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>@Model.User.FirstName's Profile</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User.ID" />
            <div class="form-group">
                <label asp-for="@Model.FirstName" class="control-label">First Name</label>
                <input asp-for="@Model.FirstName" class="form-control" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.LastName" class="control-label">Last Name</label>
                <input asp-for="@Model.LastName" class="form-control" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="control-label">Email</label>
                <input asp-for="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Link1" class="control-label">Link1</label>
                <input asp-for="@Model.Link1" class="form-control" />
                <span asp-validation-for="@Model.Link1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Link2" class="control-label">Link2</label>
                <input asp-for="@Model.Link2" class="form-control" />
                <span asp-validation-for="@Model.User.Link2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Link3" class="control-label">Link3</label>
                <input asp-for="@Model.Link3" class="form-control" />
                <span asp-validation-for="@Model.User.Link3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
