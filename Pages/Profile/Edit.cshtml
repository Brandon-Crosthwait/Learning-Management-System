@page
@model LMS.Pages.Profile.EditModel

@{
    ViewData["Title"] = "Edit";
    var photoPath = "~/images/" + (Model.User.PhotoPath ?? "noimage.jpg");
}

<h1>@Model.User.FirstName's Profile</h1>

<hr />
<img class="imageThumbnail" src="@photoPath" asp-append-version="true" />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User.ID" />
            <input type="hidden" asp-for="User.PhotoPath" />

            <div class="form-group row">
                <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="Photo" class="custom-file-input form-control" />
                        <label class="custom-file-label">Click here to change photo</label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="@Model.FirstName" class="control-label">First Name</label>
                <input asp-for="@Model.FirstName" class="form-control" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.LastName" class="control-label">Last Name</label>
                <input asp-for="@Model.LastName" class="form-control" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Email" class="control-label">Email</label>
                <input asp-for="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Link1" class="control-label">Link1</label>
                <input asp-for="@Model.Link1" class="form-control" />
                <span asp-validation-for="@Model.Link1" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Link2" class="control-label">Link2</label>
                <input asp-for="@Model.Link2" class="form-control" />
                <span asp-validation-for="@Model.Link2" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.User.Link2" class="control-label">Link3</label>
                <input asp-for="@Model.Link3" class="form-control" />
                <span asp-validation-for="@Model.Link3" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @*This j-query script updates the above label "custom-file-label" to read the file name you selected.*@
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
