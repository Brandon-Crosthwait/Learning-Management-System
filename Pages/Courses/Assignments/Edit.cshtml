@page
@model LMS.Pages.Courses.CourseInfo.Assignments.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Assignment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Assignment.ID" />
            <div class="form-group">
                <label asp-for="Assignment.Title" class="control-label"></label>
                <input asp-for="Assignment.Title" class="form-control" />
                <span asp-validation-for="Assignment.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.Points" class="control-label"></label>
                <input asp-for="Assignment.Points" class="form-control" />
                <span asp-validation-for="Assignment.Points" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.Description" class="control-label"></label>
                <input asp-for="Assignment.Description" class="form-control" />
                <span asp-validation-for="Assignment.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.Due" class="control-label"></label>
                <input asp-for="Assignment.Due" class="form-control" />
                <span asp-validation-for="Assignment.Due" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.SubmissionType" class="control-label">Submission Type</label>
                <select asp-for="Assignment.SubmissionType" class="form-control"
                        asp-items="@Model.SubmissionList">
                    <option value="">-- Select Submission Type --</option>
                </select>
                <span asp-validation-for="Assignment.SubmissionType" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
